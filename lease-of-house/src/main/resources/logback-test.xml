<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanPeriod="3 seconds">

	<!-- <configuration debug="true"> -->
	<!-- 配置 configuration 元素 debug 属性为 true 完全等于添加 -->
	<!-- <statusListener class="ch.qos.logback.core.status.OnConsoleStatusListener" /> -->

	<!-- 设置标准控制台日志输出 Appender -->
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<param name="Encoding" value="UTF-8" />
		<encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
			<pattern>
				%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger.%method line %line - [%msg]%n
			</pattern>
		</encoder>
	</appender>

	<!-- 设置 DEBUG 级别文件日志输出 Appender -->
	<appender name="DRUID_DEBUG_FILE" class="ch.qos.logback.core.FileAppender">
		<!-- 设置字符集编码格式 -->
		<param name="Encoding" value="UTF-8" />
		<!-- 设置输出到日志文件 -->
		<file>./logs/druid/druid_debug.log</file>
		<!-- 设置日志布局格式编码 -->
		<encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
			<pattern>
				%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger.%method line %line - [%msg]%n
			</pattern>
		</encoder>
		<!-- 设置日志级别过滤器 -->
		<filter class="ch.qos.logback.classic.filter.LevelFilter">
			<level>DEBUG</level>
			<onMatch>ACCEPT</onMatch>
			<onMismatch>DENY</onMismatch>
		</filter>
	</appender>

