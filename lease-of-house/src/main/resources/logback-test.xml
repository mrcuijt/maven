	<!-- 设置指定日志对象 Logger 的日志输出级别 -->
	<logger name="druid.sql.Connection">
		<level value="INFO" />
	</logger>
	
	<!-- 设置指定日志对象 Logger 的日志输出级别 -->
	<logger name="druid.sql" additivity="false">
		<level value="DEBUG" />
		<!-- 配置日志输出的目的地 -->
		<appender-ref ref="DRUID_DEBUG_FILE" />
		<appender-ref ref="DRUID_INFO_FILE" />
		<appender-ref ref="DRUID_WARN_FILE" />
		<appender-ref ref="DRUID_ERROR_FILE" />
	</logger>

	<!-- 设置指定日志对象 Logger 的日志输出级别 -->
	<logger name="java.sql">
